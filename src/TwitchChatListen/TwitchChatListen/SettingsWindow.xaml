<Window x:Class="TwitchChatListen.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitchChatListen"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="169" Width="400" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid Margin="0,0,0,-2">
        <Label Content="アカウント" HorizontalAlignment="Left" Margin="15,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-5.342,0.462"/>
        <TextBox x:Name="AccountTextBox" HorizontalAlignment="Left" Height="23" Margin="114,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="268"/>
        <Label Content="チャットパスワード" HorizontalAlignment="Left" Margin="10,51,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.517,1.962"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Margin="114,51,0,0" VerticalAlignment="Top" Width="268" Height="21"/>
        <Button x:Name="MakePasswordBtn" Content="パスワードを生成する" HorizontalAlignment="Left" Margin="252,87,0,0" VerticalAlignment="Top" Width="130" Click="MakePasswordBtn_Click" RenderTransformOrigin="0.531,2.95"/>
    </Grid>
</Window>
